<?xml version="1.0" ?>
<odoo>

    <template id="report_hr_letter_document">
        <t t-call="web.html_container" >
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div>
                        <span>التاريخ : </span><span t-field="o.create_date"></span>
                    </div>
                    <!-- dir="rtl" -->
                    <div class="page" >
                        <br />

                        <h2 class="text-center">شهادة HR Letter</h2>
                        <div>
                            <br />
                            <br />
                            <div class="row">
                                <div class="col-6">
                                    <div class="row" t-if="o.x_employee_id.name">
                                        <div class="col">
                                            <span>اسم الموظف : </span><span t-field="o.x_employee_id.name" />
                                        </div>
                                    </div>

                                    <div class="row" t-if="o.x_employee_id.job_id">
                                        <div class="col">
                                            <br />
                                            <span>الوظيفة : </span><span t-field="o.x_employee_id.job_id.name" />
                                        </div>
                                    </div>

                                    <div class="row" t-if="o.x_employee_id.certificate">
                                        <div class="col">
                                            <br />
                                            <span>المؤهل : </span><span t-field="o.x_employee_id.certificate" />
                                        </div>
                                    </div>

                                    <div class="row" t-if="o.x_employee_id.birthday">
                                        <div class="col">
                                            <br />
                                            <span>تاريخ الميلاد : </span><span t-field="o.x_employee_id.birthday" />
                                        </div>
                                    </div>
                                    
                                    <div class="row" t-if="o.x_employee_id.identification_id">
                                        <div class="col">
                                            <br />
                                            <span>الرقم القومي : </span><span t-field="o.x_employee_id.identification_id" />
                                        </div>
                                    </div>
                                    
                                    <div class="row" t-if="o.x_employee_id.x_hiring_date">
                                        <div class="col">
                                            <br />
                                            <span>تاريخ التعيين : </span><span  t-field="o.x_employee_id.x_hiring_date" />
                                        </div>
                                    </div>

                                    <div class="row" t-if="o.x_employee_id.x_receiving_work_date">
                                        <div class="col">
                                            <br />
                                            <span>تاريخ استلام العمل : </span><span  t-field="o.x_employee_id.x_receiving_work_date" />
                                        </div>
                                    </div>
                                    
                                    <div class="row" t-if="o.x_employee_id.x_job_degree_id">
                                        <div class="col">
                                            <br />
                                            <span>الدرجة المالية : </span><span  t-field="o.x_employee_id.x_job_degree_id.name" />
                                        </div>
                                    </div>

                                    <div class="row" t-if="o.x_employee_id.x_qualitative_group_id">
                                        <div class="col">
                                            <br />
                                            <span>المجموعة النوعية : </span><span  t-field="o.x_employee_id.x_qualitative_group_id.name" />
                                        </div>
                                    </div>
                                    
                                    <div class="row" t-if="o.x_employee_id.x_social_insurance_number">
                                        <div class="col">
                                            <br />
                                            <span>الرقم التأميني : </span><span  t-field="o.x_employee_id.x_social_insurance_number" />
                                        </div>
                                    </div>

                                    <div class="row" t-if="o.x_employee_id.x_pension_date">
                                        <div class="col">
                                            <br />
                                            <span>تاريخ الاحالة للمعاش : </span><span  t-field="o.x_employee_id.x_pension_date" />
                                        </div>
                                    </div>
                                    

                                </div>

                                <div class="col-6">


                                </div>
                            </div>

                            <br/>
                            <br/>
                            <div class="row">
                                <div class="col">
                                    <span>علما بأن السيد المذكور من ضمن العاملين بشركة ميناء القاهرة الجوي و مازال يعمل بها حتى الان و انه يخضع لقانون التأمين الاجتماعي رقم 79 لسنة 57</span>
                                </div>
                            </div>

                            <br/>
                            <div class="row">
                                <div class="col">
                                    <span>و قد أعطيت لسيادته هذه الشهادة بناء على طلبه من واقع سجلات الشركة وذلك لتقديمها الى : </span><span t-field="o.x_destination" />
                                </div>
                            </div>

                            <br/>
                            <br/>
                            <div class="row">
                                <div class="col">
                                    <span>الموظف المختص</span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <span>رئيس قسم السجلات</span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <span>مدير ادارة وثائق الخدمة</span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <span>مدير عام الموارد البشرية</span>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_hr_letter_document" model="ir.actions.report">
        <field name="name">HR Letter Document</field>
        <field name="model">hr_letter_document</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_extend_minds.report_hr_letter_document</field>
        <field name="report_file">hr_extend_minds.report_hr_letter_document</field>
        <field name="print_report_name">'HR Letter Document - %s - %s' % (object.x_employee_id.name, object.x_employee_id.x_staff_id)</field>
        <field name="binding_model_id" ref="model_hr_letter_document"/>
        <field name="binding_type">report</field>
    </record>

</odoo>